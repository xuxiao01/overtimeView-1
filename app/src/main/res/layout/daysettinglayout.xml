<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    >

    <com.example.v_chzha4.overtimeview.MyEditText
        android:id="@+id/edit_daysetting"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/select_edittext"
        android:hint="@string/dayhint"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btn_dayok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:layout_toLeftOf="@+id/edit_basicwage"
        android:layout_toStartOf="@+id/edit_basicwage"
        android:onClick="dayOK"
        android:text="@string/ok"
        android:background="@color/addOK"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"/>

</LinearLayout>